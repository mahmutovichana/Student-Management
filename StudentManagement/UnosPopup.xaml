<Window x:Class="StudentManagement.UnosPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UnosPopup" Height="232" Width="246">
    <Grid Margin="5,17,5,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="ID:" Margin="5"/>
        <TextBox x:Name="idTextBox" Grid.Row="0" Margin="100,5,5,5"/>

        <TextBlock Text="Ime:" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="imeTextBox" Grid.Row="1" Margin="100,5,5,5"/>

        <TextBlock Text="Prezime:" Grid.Row="2" Margin="5"/>
        <TextBox x:Name="prezimeTextBox" Grid.Row="2" Margin="100,5,5,5"/>

        <TextBlock Text="Adresa:" Grid.Row="3" Margin="5"/>
        <TextBox x:Name="adresaTextBox" Grid.Row="3" Margin="100,5,5,5"/>

        <TextBlock Text="Grad:" Grid.Row="4" Margin="5"/>
        <TextBox x:Name="gradTextBox" Grid.Row="4" Margin="100,5,5,5"/>

        <Button Content="Save" Grid.Row="5" Margin="5" Click="Save_Click"/>
    </Grid>
</Window>
