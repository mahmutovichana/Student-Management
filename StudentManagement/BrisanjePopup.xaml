<Window x:Class="StudentManagement.BrisanjePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Brisanje" Height="115" Width="300">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Odaberi osobu:" Margin="5"/>
        <ComboBox x:Name="osobaComboBox" Grid.Row="0" Margin="100,5,5,5"/>

        <Button Content="Delete" Grid.Row="1" Margin="5" Click="Delete_Click"/>
    </Grid>
</Window>
